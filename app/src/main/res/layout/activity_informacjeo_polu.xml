<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #2B2F42"
    android:orientation="vertical"
    tools:context=".InformacjeoPolu">

    <TextView
        android:id="@+id/nazwaPolaView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#74A7AE"
        android:text="@string/nazwa"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nrEwidencyjnytv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#74A7AE"
        android:text="@string/NrEwidencyjny"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/powierzchniaView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#74A7AE"
        android:text="@string/powierzchnia"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#74A7AE"
                android:padding="1dp"
                android:text="@string/zabiegi"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/zabiegiView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:padding="1dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#74A7AE"
                android:padding="1dp"
                android:text="@string/Zagrozenia"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/zagrozeniaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:padding="1dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#74A7AE"
                android:padding="1dp"
                android:text="@string/Notatki"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notatkiView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:padding="1dp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnZobaczObszar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="20dp"
                android:text="@string/btnZobaczObszar"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>